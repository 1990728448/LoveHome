<?xml version="1.0" encoding="utf-8"?>
<!--这是"忘记密码的子页面"的布局文件-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#51C477">
        <ImageView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="15dp"
            android:layout_gravity="center"
            android:src="@mipmap/back_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:text="@string/string_Forgotpassword"/>
        <LinearLayout
            android:id="@+id/popwind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="手机号码："
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"/>
        <EditText
            android:inputType="number"
            android:id="@+id/et4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="11位手机号码"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/changepassword_confirm1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@mipmap/btn_small_green"
            android:text="获取验证码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"/>
    <EditText
        android:id="@+id/et5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" 6位密码"
        android:password="true"/>
    </LinearLayout>
    <Button
        android:id="@+id/changepassword_confirm_subpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/btn_small_green"
        android:text="获取登录密码"/>
</LinearLayout>
