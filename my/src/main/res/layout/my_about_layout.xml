<?xml version="1.0" encoding="utf-8"?>
<!--这是"关于爱家乡"的布局文件-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#51C477"
        android:gravity="center">
        <ImageView
            android:id="@+id/fanhui"
            android:layout_gravity="left"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/xiaoyuhao"
            android:onClick="fanhui_click"/> //返回上一个页面
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="      关于爱家乡"
            android:textSize="35dp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:background="#51C477"/>

    </LinearLayout>
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="   《爱家乡》是一款便民信息发布软件，旨在最全面、最准确收集家乡的生活类信息，从而服务当地人，实现特定区域内人与人互动更频繁，信息来往更高效。爱家乡，让每个人更爱自己的家乡，让每个家乡都成为一个品牌。

    《爱家乡》欢迎与各行业交流和合作，共同提升平台价值，与合作方的业务，实现双赢和多赢局面。平台联系人陈先生，电话13858148242（微信同号）。"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"/>
</LinearLayout>
