<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    //更新

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#51C477"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_business_layouth_fanhui"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/back_icon"
                android:gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="商户详情"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/fenxiang"
            android:gravity="center_vertical"

            />

        <ImageButton
            android:id="@+id/home_business_layouth_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@mipmap/love_icon2"
            android:gravity="center_vertical" />

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_business_dianjia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_business_dianming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:text="店铺名"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="人均："
                            android:textColor="#D3D3D3"
                            android:textSize="15dip" />

                        <TextView
                            android:id="@+id/home_business_jiage"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:text="0000"
                            android:textColor="#D3D3D3"
                            android:textSize="15dip" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_vertical"
                            android:text=" 元/人起"
                            android:textColor="#D3D3D3"
                            android:textSize="15dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="营业时间："
                            android:textColor="#D3D3D3"
                            android:textSize="15dip" />

                        <TextView
                            android:id="@+id/home_business_shijian"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:text="00:00"
                            android:textColor="#D3D3D3"
                            android:textSize="15dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="--"
                            android:textColor="#D3D3D3" />

                        <TextView
                            android:id="@+id/home_business_shijian1"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_vertical"
                            android:text="23:00"
                            android:textColor="#D3D3D3"
                            android:textSize="15dip" />
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="#E8E8E8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="地址："
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/home_business_dizhi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="待输入"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#E8E8E8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="联系人："
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/home_business_lianxiren"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="前台热线"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#E8E8E8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="电话："
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/home_business_dianhua"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="待输入"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#CCCCCC" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#EBEBEB"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="详情" />
                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="123dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_business_jianjie"
                        android:text="呵呵呵呵呵呵呵........"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:textColor="#12252C"
                        android:textSize="18sp" />




                </ScrollView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/homg_pager_business_callPhone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/phone" />

            <TextView

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="电话"
                android:textColor="#51C477"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#C0C0C0" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/jubao" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="举报"
                android:textColor="#51C477"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>


